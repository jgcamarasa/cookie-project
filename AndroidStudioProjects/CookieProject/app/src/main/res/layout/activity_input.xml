<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jgcamarasa.cookieproject.InputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <View
                android:id="@+id/view_input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_player_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 0"/>
                <TextView
                    android:id="@+id/text_motion_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0, 0.0, 0.0"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <View
                android:id="@+id/view_input2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_player_id2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 0"/>
                <TextView
                    android:id="@+id/text_motion_data2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0, 0.0, 0.0"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
